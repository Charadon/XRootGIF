##
# XRootGIF
#
VERSION=1.4.2
CC= gcc
DEFINES= -D VERSION=\"$(VERSION)\" __DEFINES
LIBRARIES= -lX11 -lgif -lImlib2 __LIBRARIES
CFLAGS = -Wall -zrelro -znow __CFLAGS
ALLCFLAGS = $(CFLAGS) $(LIBRARIES) $(DEFINES) $(shell echo | gcc -xc -E -v - 2>&1 | grep -E '^\s' | sed '1d;s/^\s/ -I/' | tr '\n' ' ') # Explictly include system libraries for cdb
LNFLAGS= -zrelro -znow __LNFLAGS
OBJ= xrootgif.o globals.o output.o sample.o gif.o pixmap_allocate.o daemon.o

prefix=__PREFIX
pkgname=__PKGNAME

xrootgif: $(OBJ)
	$(CC) $(LNFLAGS) $(LIBRARIES) $(OBJ) -o xrootgif

run: xrootgif
	./xrootgif $(ARGS)

debug: clean debug_flag xrootgif

debug_flag:
	$(eval ALLCFLAGS += -g)

install: xrootgif
	install -D -m755 xrootgif $(prefix)/usr/bin/$(pkgname)
	install -D -m644 LICENSE.txt $(prefix)/usr/share/licenses/$(pkgname)/LICENSE.txt
	install -D -m644 utils/zsh-completion $(prefix)/usr/share/zsh/site-functions/_$(pkgname)

uninstall:
	rm $(prefix)/usr/bin/$(pkgname)
	rm $(prefix)/usr/share/licenses/$(pkgname)/LICENSE.txt
	rm $(prefix)/usr/share/zsh/site-functions/_xrootgif

clean:
	rm -f $(OBJ) xrootgif

%.o: %.c
	$(CC) $(ALLCFLAGS) -c $< -o $@

.PHONY: xrootgif run clean debug debug_flag install uninstall

# end
